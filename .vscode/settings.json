  "files.autoSaveDelay": 2000,
  "debug.console.lineHeight": 18,
  "debug.console.wordWrap": false,
  // this must be placed in file bottom
  // https://github.com/Azure/vscode-kubernetes-tools/issues/573
  "files.associations": {
    "*.yaml": "yaml",
  },
  "vscodeGoogleTranslate.preferredLanguage": "Chinese (Simplified)",
  "debug.toolBarLocation": "docked",
  "editor.suggest.shareSuggestSelections": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "emmet.showExpandedAbbreviation": "never",
  "workbench.editor.revealIfOpen": true,
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.editor.enablePreview": false,
  "terminal.integrated.scrollback": 10000,
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.tsserver.maxTsServerMemory": 8096,
  "typescript.disableAutomaticTypeAcquisition": true,
  "git.autofetchPeriod": 360000,
  "git.autorefresh": false,
  "gitlens.views.repositories.autoRefresh": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "git.autoStash": true,
  "editor.selectionClipboard": false,
  "terminal.integrated.copyOnSelection": true,
  "scm.repositories.visible": 0,
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.includePath": [
    "node_modules/node-addon-api/"
  ],
  "C_Cpp.default.systemIncludePath": [
    "${default}",
    "/usr/include/c++/10",
    "/usr/include/x86_64-linux-gnu/c++/10",
    "/usr/include/c++/10/backward",
    "/usr/lib/gcc/x86_64-linux-gnu/10/include",
    "/usr/local/include",
    "/usr/include/x86_64-linux-gnu",
    "/usr/include"
  ],
  "C_Cpp.vcFormat.indent.braces": true,
  "C_Cpp.clang_format_path": "/usr/bin/clang-format",
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.formatting": "clangFormat",
  "todo-tree.tree.scanMode": "open files",
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.showBadges": false,
  "files.eol": "\n",
  "editor.guides.indentation": true,
