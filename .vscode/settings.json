{
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "workbench.iconTheme": "vscode-icons",
  "workbench.settings.useSplitJSON": true,
  "workbench.view.alwaysShowHeaderActions": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "emmet.triggerExpansionOnTab": true, //编辑器失去焦点时自动保存更新后的文件
  "editor.wordWrapColumn": 120,
  "editor.wordWrap": "on",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  // "editor.formatOnType": true,
  "editor.rulers": [
    100,
    120
  ],
  "editor.minimap.maxColumn": 80,
  "editor.formatOnSave": true,
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll": true,
  },
  "npm.packageManager": "yarn",
  "terminal.integrated.showExitAlert": false,
  "cSpell.minWordLength": 6,
  "cSpell.logLevel": "Information",
  "cSpell.maxDuplicateProblems": 2,
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.codeLens.enabled": false,
  "eslint.debug": true,
  // "eslint.format.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
  ],
  "yaml.format.enable": true,
  "yaml.format.printWidth": 120,
  "javascript.format.enable": false,
  "javascript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.format.enable": false,
  "typescript.preferences.quoteStyle": "single",
  "typescript.surveys.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[sql]": {
    "editor.defaultFormatter": "bradymholt.pgformatter"
  },
  "bracketPairColorizer.showBracketsInRuler": true,
  "pgFormatter.commaBreak": true,
  "markdown.preview.lineHeight": 1.4,
  "markdownlint.config": {
    // https://github.com/DavidAnson/markdownlint/blob/main/doc/Rules.md#md041
    "MD041": false,
    "MD024": false,
    "MD036": false,
    "MD028": false,
    "MD025": {
      "front_matter_title": ""
    }
  },
  "typescript.locale": "en",
  "git.detectSubmodulesLimit": 100,
  "git.confirmSync": false,
  "jest.enableInlineErrorMessages": true,
  "jest.autoEnable": false,
  "jest.disabledWorkspaceFolders": [
    "node_modules",
    "v-frame"
  ],
  "jest.debugMode": true,
  "jest.pathToJest": "yarn test",
  "gitlab.instanceUrl": "https://192.168.20.9",
  "gitlab.ignoreCertificateErrors": true,
  "vscode-postgres.prettyPrintJSONfields": true,
  "kafka.consumers.offset": "earliest",
